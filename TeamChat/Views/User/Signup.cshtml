@{
    ViewData["Title"] = "Register Page";
}

<div class="text-center">
    <h1 class="display-4">Signup</h1>

    <br><br>
    <div class="d-flex justify-content-center">
        <form asp-action="RegisterUser" method="post">
            <div class="form-group">
                <input type="text" class="form-control" id="InputName" placeholder="Enter name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="InputLastName" placeholder="Enter lastname">
            </div>
            <div class="form-group">
                <input type="email" class="form-control" id="InputEmail" placeholder="Enter email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="InputPassword" placeholder="Enter password">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="InputPassword" placeholder="Repeat password">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="InputPassword" placeholder="Enter screen name">
            </div>
            <button type="submit" class="btn btn-primary">Signup</button>
        </form>
    </div>

</div>